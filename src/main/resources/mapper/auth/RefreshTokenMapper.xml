<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spacecore.mapper.auth.RefreshTokenMapper">

    <!-- Refresh Token 조회 -->
    <select id="findByToken" parameterType="string" resultType="com.spacecore.domain.auth.RefreshToken">
        SELECT id, user_id, token, expiry_date
        FROM refresh_tokens
        WHERE token = #{token}
    </select>

    <!-- Refresh Token 저장 -->
    <insert id="insert" parameterType="com.spacecore.domain.auth.RefreshToken">
        INSERT INTO refresh_tokens (id, user_id, token, expiry_date)
        VALUES (seq_refresh_tokens.NEXTVAL, #{userId}, #{token}, #{expiryDate})
    </insert>

    <!-- 사용자별 Refresh Token 삭제 -->
    <delete id="deleteByUserId" parameterType="long">
        DELETE FROM refresh_tokens WHERE user_id = #{userId}
    </delete>

</mapper>
