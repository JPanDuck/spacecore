<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.spacecore.mapper.office.OfficeMapper">

    <resultMap id="OfficeMap" type="com.spacecore.domain.office.Office">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="address" property="address"/>
        <result column="status" property="status"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <!-- 전체 조회 -->
    <select id="findAll" resultMap="OfficeMap">
        SELECT id, name, address, status, created_at
        FROM offices
        ORDER BY id DESC
    </select>

    <!-- 지점 단건 조회 -->
    <select id="findById" parameterType="long" resultMap="OfficeMap">
        SELECT id, name, address, status, created_at
        FROM offices
        WHERE id = #{id}
    </select>

    <!-- 지점 등록 -->
    <insert id="insert" parameterType="com.spacecore.domain.office.Office">
        <selectKey keyProperty="id" resultType="long" order="BEFORE">
            SELECT seq_offices.NEXTVAL FROM dual
        </selectKey>
        INSERT INTO offices (id, name, address, status, created_at)
        VALUES (#{id}, #{name}, #{address}, NVL(#{status}, 'ACTIVE'), SYSDATE)
    </insert>

    <!-- 지점 수정 -->
    <update id="update" parameterType="com.spacecore.domain.office.Office">
        UPDATE offices
        SET name    = #{name},
            address = #{address},
            status  = #{status}
        WHERE id = #{id}
    </update>

    <!-- 지점 삭제 -->
    <delete id="delete" parameterType="long">
        DELETE FROM offices WHERE id = #{id}
    </delete>
</mapper>