<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spacecore.mapper.notification.NotificationMapper">
    <resultMap id="notificationMap" type="com.spacecore.domain.notification.Notification">
        <id property="notiId" column="noti_id" />
        <result property="userId" column="user_id" />
        <result property="type" column="type" />
        <result property="refId" column="ref_id" />
        <result property="message" column="message" />
        <result property="targetUrl" column="target_url" />
        <result property="readYn" column="read_yn" />
        <result property="createdAt" column="created_at" />
    </resultMap>

    <!-- 알림 등록 -->
    <insert id="insertNotification" parameterType="com.spacecore.domain.notification.Notification">
        <selectKey keyProperty="notiId" resultType="long" order="BEFORE">
            SELECT seq_notifications.NEXTVAL FROM dual
        </selectKey>
        INSERT INTO notifications (noti_id, user_id, type, ref_id, message, target_url)
        VALUES (#{notiId}, #{userId}, #{type}, #{refId}, #{message}, #{targetUrl})
    </insert>

    <!-- 사용자별 알림 목록 조회 -->
    <select id="selectNotificationByUserId" resultMap="notificationMap">
        SELECT *
        FROM notifications
        WHERE user_id = #{userId}
        ORDER BY created_at DESC
    </select>

    <!-- 읽음 처리 -->
    <update id="markAsRead">
        UPDATE notifications
        SET read_yn = 'Y'
        WHERE noti_id = #{notiId}
        AND user_id = #{userId}
    </update>

    <!-- 알림 전체 읽음 처리 -->
    <update id="markAllAsRead">
        UPDATE notifications
        SET read_yn = 'Y'
        WHERE user_id = #{userId}
        AND read_yn = 'N'
    </update>

    <!-- 안읽은 알림 개수 조회 -->
    <select id="getUnreadCount" resultType="int">
        SELECT COUNT(*)
        FROM notifications
        WHERE user_id = #{userId}
        AND read_yn = 'N'
    </select>

</mapper>